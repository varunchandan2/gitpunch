{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "noImplicitAny": false,
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "lib": ["es7"],
    "outDir": "./build",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
